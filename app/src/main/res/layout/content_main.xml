<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.senaijandira.financas.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#2dede0"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="#e2f5f5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal"
            android:text="Saldo Atual:"
            android:textAlignment="center"
            android:id="@+id/txt_saldo"
            android:textColor="#020202"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="$00,00"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="45dp"
            android:textStyle="bold"
            android:id="@+id/txt_total"/>

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="190dp"
        android:background="#02fa2b"
    android:text=" Adicionar Receita "
        android:onClick="receita"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="45dp"
        android:layout_marginTop="-50dp"
        android:background="#fa0217"
        android:text="Despesas"
        android:onClick="despesa"/>


</LinearLayout>
